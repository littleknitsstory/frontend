{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:alpine AS builder",
    "WORKDIR /app",
    "COPY package*.json ./",
    "RUN npm install",
    "COPY . .",
    "RUN npm run build",
    "FROM node:alpine",
    "WORKDIR /app",
    "COPY package*.json ./",
    "RUN npm install --only=production",
    "COPY --from=builder /app/.next ./.next",
    "COPY --from=builder /app/public ./public",
    "ENV NEXT_PUBLIC_BASE_PATH /",
    "EXPOSE 3000",
    "CMD ['npm', 'start']"
  ]
}
